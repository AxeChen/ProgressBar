<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mg.axe.paintsimple.MainActivity">

    <com.mg.axe.paintsimple.RoundProgress
        android:id="@+id/rpOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:progress_text_size="50sp"
        app:progress_width="10dp"
        app:radius="150dp"
        app:progress_text_color="@color/colorPrimary"
        app:wait_bar_color="@color/colorAccent" />

    <com.mg.axe.paintsimple.RoundProgress
        android:id="@+id/rpTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:inside_border_width="15dp"
        app:outside_border_width="15dp"
        app:progress_text_size="80dp"
        app:progress_width="15dp"
        app:radius="100dp"
        app:show_inside_border="true"
        app:show_outside_border="true"
        app:wait_bar_color="@color/colorAccent" />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/acsb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
